{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    //Type Checking Options
    //Modules
    "baseUrl": "./src",
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    //Emits
    "outDir": "./build",
    //interoperability
    "isolatedModules": true,
    //Language and Environment
    "jsx": "react-jsx",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "ES2020",
    "useDefineForClassFields": true,
    //Projects
    "composite": true,
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
}
