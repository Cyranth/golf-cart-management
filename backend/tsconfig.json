{
   "compilerOptions": {
      //Type Checking Options
      "alwaysStrict": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      //Modules
      "baseUrl": ".",
      // "rootDir": "./src",
      "composite": true,
      "moduleResolution": "NodeNext",
      "module": "NodeNext",
      "resolveJsonModule": true,
      "paths": {
         "@/*": [
            "./src/*",
         ]
      },
      //JavaScript
      "allowJs": true,
      "checkJs": true,
      //Interop
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      //Emits
      "outDir": "./build",
      "sourceMap": true,
      //Language and Environment
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "ESNext",
      //Output Format
      "skipLibCheck": true,
   },
   "include": [
      "src",
   ],
   "exclude": [
      "tsconfig.json",
      "node_modules",
      "build",
   ]
}
